<%= form_with(model: bookmark, remote: true) do |form| %>
  <% if bookmark.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(bookmark.errors.count, "error") %> prohibited this bookmark from being saved:</h2>

      <ul>
        <% bookmark.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :url %>
    <%= form.text_field :url %>
  </div>

  <div class="field">
    <%= form.label :types %>
    <%= form.collection_check_boxes(:type_ids , Type.all, :id ,:name) do |b| %>
      <%= b.label class:"label-checkbox" do %>
        <%= b.check_box + b.text%>
        
      <% end %>
    <% end %>
  </div>

  <div class="field">
    <%= form.label :categories %>
    <%= form.collection_check_boxes(:category_ids , Category.all, :id ,:name) do |b| %>
      <%= b.label class:"label-checkbox" do %>
        <%= b.check_box + b.text%>
        
      <% end %>
    <% end %>
  </div>



  <div class="actions">
    <%= form.submit data: { confirm: 'Are you sure?' }%>
  </div>
<% end %>
